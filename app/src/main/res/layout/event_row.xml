<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <RelativeLayout
        android:id="@+id/back"
        android:tag="back"
        android:background="#ffffff"
        android:layout_width= "fill_parent"
        android:layout_height = "100dp"
        >
        <ImageView
            android:id="@+id/delete1x"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/delete_event"/>
        <ImageView
            android:id="@+id/edit1x"
            android:layout_toLeftOf="@id/delete1x"
            android:layout_toStartOf="@id/delete1x"
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/edit_event"/>
        <ImageView
            android:id="@+id/nav1x"
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/navigate"
            android:layout_toLeftOf="@+id/edit1x" />

        <LinearLayout
            android:id = "@+id/front"
            android:tag = "front"
            android:background="#ffffff"
            android:orientation = "horizontal"
            android:layout_width="fill_parent"
            android:layout_height = "100dp"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/room_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text = "test"
                    android:id="@+id/event_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <TextView
                    android:text = "test2"
                    android:layout_below = "@+id/event_summary"
                    android:id="@+id/event_start_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:text = "test3"
                    android:textSize="12sp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_time_until"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>