<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/room_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/event_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/room_icon"
                    android:text="name"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/event_start_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:layout_below="@+id/event_summary"
                    android:layout_alignLeft="@+id/event_summary"
                    android:layout_alignStart="@+id/event_summary" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
