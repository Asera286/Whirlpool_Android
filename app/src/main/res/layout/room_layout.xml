<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:id="@+id/map"
        tools:context="edu.msu.elhazzat.whirpool.activity.BaseGoogleMapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></fragment>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="2dp">
        <ImageView
            android:src = "@drawable/directions"
            android:clickable="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Directions"
            android:id="@+id/directions"
            android:layout_weight="1"/>
        <ImageView
            android:src = "@drawable/calendar2"
            android:clickable="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Book Room"
            android:id="@+id/bookmark"
            android:layout_weight="1"/>
        <ImageView
            android:src = "@drawable/favorite"
            android:clickable="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Favorite"
            android:id="@+id/favorite"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/roomNameText"
        android:textColor="#000000"
        android:layout_weight="0.2"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="2dp"/>

    <ListView
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/roomInfoList"
        android:background="#ffffff">

    </ListView>



</LinearLayout>